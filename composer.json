{
	"name" : "Template",
	"description" : "Template",
	"homepage" : "http://template.com.br",
	"require" : {
		"php" : "^7.0",
		"doctrine/orm" : "^2.5.5",
		"intervention/image" : "^2.3",
		"phpmailer/phpmailer" : "^5.2"
	},
	"autoload" : {
		"psr-4" : {
			"App\\" : "app/"
		}
	},
	"scripts" : {
		"proxy:create" : "mkdir -m 777 -p data/DoctrineORMModule/Proxy",
		"proxy:clear" : "rm -rf data/DoctrineORMModule/Proxy/*",
		"proxy:generate" : "./vendor/doctrine/orm/bin/doctrine orm:generate-proxies",
		"bd:generate-entities" : "./vendor/doctrine/orm/bin/doctrine orm:convert-mapping --namespace='entity\\' --force --from-database annotation ./app/src"
	}
}