{
	"name": "Template",
	"description": "Template",
	"homepage": "http://template.com.br",
	"require": {
		"php": "^7.0",
		"doctrine/orm": "^2.5.5"
	},
	"autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
	"scripts": {
		"proxy:create": [
			"mkdir -m 777 -p data/DoctrineORMModule/Proxy"
		],
		"proxy:clear": [
			"rm -rf data/DoctrineORMModule/Proxy/*"
		],
		"proxy:generate": [
			"./vendor/doctrine/orm/bin/doctrine orm:generate-proxies"
		],
		"doctrine:is-ready": [
			"./vendor/doctrine/orm/bin/doctrine orm:ensure-production-settings"
		],
		"doctrine:generate-entities": [
			"./vendor/doctrine/orm/bin/doctrine orm:generate-entities ./app/src/ --generate-annotations=true"
		],
		"bd:generate-entities": [
			"./vendor/doctrine/orm/bin/doctrine orm:convert-mapping --namespace='App\\Entity\\' --force --from-database annotation ./app/src"
		]
	}
}
